<% layout('layouts/boilerplate')%>
<%- include('../partials/sidebar') %>
<%- include('../partials/nav') %>
<%- include('../partials/flash') %>
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card bg-primary">
                    <div class="inner">
                        <h3> Restoration </h3>
                        <p>Apply for Restoration</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-rupee-sign" aria-hidden="true"></i>
                    </div>
                    <a href="/dashboard/restoration" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="card bg-info">
                    <div class="inner">
                        <h3> Age Benefit </h3>
                        <p> Apply for Age Benefit </p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <a href="/dashboard/agebenefit" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card bg-danger">
                    <div class="inner">
                        <h3>Death Intimation</h3>
                        <p>Submit Death Intimation</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-signature"></i>
                    </div>
                    <a href="/dashboard/death" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
                <div class="card bg-success">
                    <div class="inner">
                        <h3>Life Certificate</h3>
                        <p>See Details</p>
                    </div>
                    <div class="icon">
                        <i class="far fa-file-alt"></i>
                    </div>
                    <a href="/dashboard/lifecertificate" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
                <div class="card bg-warning">
                    <div class="inner">
                        <h3>Forms</h3>
                        <p>View Application Forms</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-invoice"></i>
                    </div>
                    <a href="/dashboard/forms" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="card bg-light" id="news-card">
                    <div class="inner">
                        <marquee height= "400px" width="100%" behavior="scroll" direction="up" scrollamount="2" onmouseover="this.stop();" onmouseout="this.start();">
                            <%notifications.forEach((notification) =>{%>
                                <p><a href=<%=notification.url%>><%=notification.title%> dated: <%=notification.date%></a></p>
                            <%})%>
                        </marquee>
                    </div>
                    <div class="icon">
                        <i class="fas fa-rss"></i>
                    </div>
                    <a href="/dashboard/notifications" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-sm-6">
                <div class="card" id="instructions">
                    <div class="inner">
                        <h3>My Account</h3>
                        <p>View your applications & more</p>
                    </div>
                    <div class="icon">
                        <i class='bx bxs-home'></i>
                    </div>
                    <a href="/dashboard/myaccount" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="card" id="aboutus">
                    <div class="inner">
                        <h3>About Us</h3>
                    </div>
                    <div class="icon">
                        <i class='bx bxs-pencil'></i>
                    </div>
                    <a href="/dashboard/aboutus" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
