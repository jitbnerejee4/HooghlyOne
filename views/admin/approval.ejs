<% layout('layouts/boilerplate')%>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-nav') %>
<%- include('../partials/flash') %>
<div class="content">
    <div class="container">
        <table class="table table-striped table-success myTable" id="mytable">
            <thead>
            <tr>
                <th>ID NO</th>
                <th>PPO NO</th>
                <th>FIRST NAME</th>
                <th>LAST NAME</th>
                <th>USERNAME</th>
                <th>MOBILE NUMBER</th>
                <th>DETAILS</th>
            </tr>
            </thead>
            <tbody>
                
                <%users.forEach((user) =>{%>
                    <tr> 
                      <td><%=user.id%></td>
                      <td><%=user.ppono%></td>
                      <td><%=user.firstname%></td>
                      <td><%=user.lastname%></td>
                      <td><%=user.username%></td>
                      <td><%=user.mobileno%></td>
                      <td><form action="/admin-dashboard/approval/<%=user._id%>" method="GET"><button class="btn btn-dark" type="submit">View</button></form></td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</div>