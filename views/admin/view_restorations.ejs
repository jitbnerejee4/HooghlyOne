<% layout('layouts/boilerplate')%>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-nav') %>
<%- include('../partials/flash') %>
<div class="content">
    <div class="container">
        <h1 class="text-center mb-5">Restoration Applications</h1>
        <table class="table table-striped table-light myTable" id="mytable">
            <thead>
            <tr>
                <th>Sl No</th>
                <th>Reference Number</th>
                <th>Pensioner Name</th>
                <th>PPO No.</th>
                <th>Date of Birth</th>
                <th>Bank Name</th>
                <th>Branch Name</th>
                <th>Status</th>
                <th>Details</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                <%let i=1%>
                <%restorations.forEach((restoration) =>{%>
                    <tr>
                        <th scope="row"><%=i%></th>
                        <td><%=restoration.ref%></td>
                        <td><%=restoration.name%></td>
                        <td><%=restoration.PPO%></td>
                        <td><%=restoration.dateofbirth%></td>
                        <td><%=restoration.bankname%></td>
                        <td><%=restoration.branchname%></td>
                        <td><%=restoration.status%></td>
                        <td><form action="/admin-dashboard/restorations/<%=restoration._id%>" method="GET"><button class="btn btn-primary" type="submit">View</button></form></td>
                        <td><form action="/admin-dashboard/restorations/delete/<%=restoration._id%>?_method=DELETE" method="POST"><button class="btn btn-success" type="submit">Delete</button></form></td>
                    </tr>
                    <%i++%>
                <%})%>
            </tbody>
        </table>
    </div>
</div>
