<% layout('layouts/boilerplate')%>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-nav') %>
<%- include('../partials/flash') %>
<div class="content">
    <div class="container">
        <table class="table table-striped table-light myTable" id="mytable">
            <thead>
            <tr>
                <th>ID No</th>
                <th>PPO No</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Mobile Number</th>
                <th>Send Message</th>
            </tr>
            </thead>
            <tbody>
                
                <%users.forEach((user) =>{%>
                    <tr> 
                      <td><%=user.id%></td>
                      <td><%=user.ppono%></td>
                      <td><%=user.firstname%></td>
                      <td><%=user.lastname%></td>
                      <td><%=user.username%></td>
                      <td><%=user.mobileno%></td>
                      <td><form action="/admin-dashboard/search/sendmessage/<%=user._id%>" method="GET"><button class="btn btn-primary" type="submit">Message</button></form></td>
                    </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</div>