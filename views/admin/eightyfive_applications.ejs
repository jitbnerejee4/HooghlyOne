<% layout('layouts/boilerplate')%>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-nav') %>
<%- include('../partials/flash') %>
<div class="content">
    <div class="container">
        <h1 class="text-center mb-5">Eighty Five Years Benefit Applications</h1>
        <table class="table table-striped table-warning myTable" id="mytable">
            <thead>
            <tr>
                <th>Sl No</th>
                <th>Reference Number</th>
                <th>Pensioner Name</th>
                <th>PPO No.</th>
                <th>Date of Birth</th>
                <th>Bank Name</th>
                <th>Branch Name</th>
                <th>Status</th>
                <th>Details</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
                <%let i=1%>
                <%applications.forEach((application) =>{%>
                    <tr>
                        <th scope="row"><%=i%></th>
                        <td><%=application.ref%></td>
                        <td><%=application.name%></td>
                        <td><%=application.PPO%></td>
                        <td><%=application.dateofbirth%></td>
                        <td><%=application.bankname%></td>
                        <td><%=application.branchname%></td>
                        <td><%=application.status%></td>
                        <td><form action="/admin-dashboard/agebenefit/eightyfive-applications/<%=application._id%>" method="GET"><button class="btn btn-secondary" type="submit">View</button></form></td>
                        <td><form action="/admin-dashboard/agebenefit/eightyfive-applications/delete/<%=application._id%>?_method=DELETE" method="POST"><button class="btn btn-success" type="submit">Delete</button></form></td>
                    </tr>
                    <%i++%>
                <%})%>
            </tbody>
        </table>
    </div>
</div>