<% layout('layouts/boilerplate')%>
<%- include('../partials/admin-sidebar') %>
<%- include('../partials/admin-nav') %>
<%- include('../partials/flash') %>
<div class="content">
  <div class="container">
    <h1 class="text-center mb-5">Death Intimations</h1>
    <table class="table table-striped table-dark myTable" id="mytable">
      <thead>
        <tr>
          <th>Sl No</th>
          <th>Reference Number</th>
          <th>Pensioner Name</th>
          <th>PPO No.</th>
          <th>Bank Name</th>
          <th>Branch Name</th>
          <th>Pension Status</th>
          <th>Details</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%let i=1%>
          <%intimations.forEach((intimation) =>{%>
            <tr>
              <th scope="row"><%=i%></th>
                <td><%=intimation.ref%></td>
                <td><%=intimation.name%></td>
                <td><%=intimation.PPO%></td>
                <td><%=intimation.bankname%></td>
                <td><%=intimation.branchname%></td>
                <td><%=intimation.status%></td>
                <td><form action="/admin-dashboard/death-intimations/<%=intimation._id%>" method="GET"><button class="btn btn-info" type="submit">View</button></form></td>
                <td><form action="/admin-dashboard/death-intimations/delete/<%=intimation._id%>?_method=DELETE" method="POST"><button class="btn btn-primary" type="submit">Delete</button></form></td>
              </tr>
            <%i++%>
          <%})%>
      </tbody>
    </table>
  </div>
</div>